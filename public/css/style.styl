/*Selector de imagen*/
  .btn-file input[type="file"] 
      position absolute
      top 0
      right 0
      min-width 100%
      min-height 100%
      opacity 0
      background red
      cursor inherit
      display block

  input[readonly] 
      background-color white !important
      cursor text !important

  .input-group
      margin-left 10%
      margin-right 10%
      width 95%
/*fin selector de imagen*/

