/*Login*/

#login
  width 100%
  background-color #fff
  padding 5% 15% 5% 15%
  min-height 475px
  h3
    text-align center
  #tablaLogin
    width 70%
    margin 10% 15% 0 15%
    #columnaPequena
      width 20%
      height auto
      padding 1% 1% 1% 1%
    #columnaGrande
      width 80%
      height auto
      padding 1% 1% 1% 1%
      input
        width 100%
        height 30px
    #olvidoContrasena
      text-align right
      padding 1% 1% 1% 1%
    #botonIngresar
      text-align center
      padding 1% 1% 1% 1%
      button
        width 100px
        height 30px 
        
#adminLogin
  margin-top 7%
  width 100%
  background-color #fff
  min-height 430px
  h3
    text-align center
  table
    width 60%
    margin 5% 20% 0 20%
    tr
      td
        padding 3% 2% 3% 2%
        text-align center
        button a 
          text-decoration none
          color #fff

