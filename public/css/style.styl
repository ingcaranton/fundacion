/*Layout*/

nav
  .container-fluid
    .navbar-header
      a.navbar-brand
        padding 0 0 0 1%
    #scrollMenu
      overflow-x auto
      overflow-y hidden
      max-height 50px
      float left
      width 80%
    #submenu
      margin-left 20%
      p 
        a 
          text-decoration none
          color #000
    ul#botonIngresar 
      top 0
      bottom 0
      padding-right 2%
      text-align center
      height 100%
      li 
        button
          height 100%
          background-color #777
          border-color #777
          float right
          a 
            text-decoration none
            color #fff

#contenido
  height auto
  width 100%
  margin 3% 0 3% 0
  background-color #69A9CD
  
.footer
  width: 100%
  background-color #777777

  #tituloFundacion
    padding-top 1%
    float left
    width 20%
    p 
      width 80%
      height 100%
      vertical-aling center
      font-size 12px 
      color #fff
      font-weight bold 

  #enlaces
    padding-top 1%
    width 80%
    float right
    
    #tablaEnlaces
    tr 
      td 
        padding 1% 2% 1% 2%
        width 130px
        text-align center
        a 
          color #fff
          font-size 12px

  #copyright
    width 100%
    float left
    p 
      text-align center
      color #fff
      font-size 10px
      
/*Fin Layout*/      
   
/*Home*/
#sliderImagenes
  padding 3% 0 3% 0
  width 100%
  #shadow
    height 100px

#seccionesPrincipales
  padding 3% 3% 3% 3%
  width 100%
  background-color #ffe
  .spacer
    clear both
  .float
    float left
    width 23%
    height 300px
    border 2px solid #333
    margin 0 1% 0 1%
    h3
      text-align center
    a 
      text-align center
      color #000
      border 1px solid #000
      font-size medium
      float center
  
        
/*Fin Home*/

/*Agregar paginas*/    
      
#pagina
  background-color #fff
  width 100%
  padding 3% 10% 3% 10%
  h3 
    text-align center
  #tablaCampos
    width 100%
    .columnaPequena
      width 8%
      height auto
      padding 1% 1% 1% 1%
    .columnaGrande
      width 92%
      height auto
      padding 1% 1% 1% 1%
      text-align center
      input 
        width 80%
        height 30px
      #inputImagen
        margin-left 10%
      textarea
        width 80%
        height 30px
      #textContenido
        width 100%
        
  #tablaBotones
    width 100%
    height auto    
    padding 3% 0 3% 0
    tr td
      text-align center
    td#regresar
      button
        a 
          text-decoration none
          color #fff
/*Fin Agregar Páginas*/
      
/*No administrador*/
#noAdmin
  margin-top 10%
  width 100%
  background-color #fff
  min-height 390px
  h1
    text-align center
/*Fin no administrador*/

