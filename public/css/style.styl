#editarPaginas
  width 100%
  background-color #fff
  margin 7% 0 5% 
  min-height 430px
  h3
    text-align center

  table#tablaEditarPaginas
    width 100%
    text-align center
    tr 
      td
        padding 3% 2% 1% 2%
        height 40px 
        text-align center        
    td.columnaTitulo
      width 35%
    td.columnaUsuario
      width 20%
    td.columnaFecha
      width 20%
    td.columnaAcciones
      width 25%    
    td.botones
      text-align center
      button
          a 
            text-decoration none
            color #fff
      
