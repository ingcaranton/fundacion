/*Layout*/

nav
  .container-fluid
    .navbar-header
      a.navbar-brand
        padding 0 0 0 1%
    #submenu
      margin-left 20%
      p 
        a 
          text-decoration none
          color #000
    ul#botonIngresar 
      top 0
      bottom 0
      padding-right 2%
      text-align center
      height 100%
      li 
        button
          height 100%
          background-color #777
          border-color #777
          float right
          a 
            text-decoration none
            color #fff

#contenido
  height auto
  width 100%
  margin 3% 0 3% 0
  background-color #1B7DEF
  
.footer
  width: 100%
  background-color #777777

  #tituloFundacion
    padding-top 1%
    float left
    width 20%
    p 
      width 80%
      height 100%
      vertical-aling center
      font-size 12px 
      color #fff
      font-weight bold 

  #enlaces
    padding-top 1%
    width 80%
    float right
    
    #tablaEnlaces
    tr 
      td 
        padding 1% 2% 1% 2%
        width 130px
        text-align center
        a 
          color #fff
          font-size 12px

  #copyright
    width 100%
    float left
    p 
      text-align center
      color #fff
      font-size 10px
      
/*Fin Layout*/      
   
