extends ../../../views/layout
block content
  if !administrador
    #editarMenu
      h1 EDITAR MENU
      #accordion.panel-group
        - var contador = 0
        each menu in menus
          .panel.panel-primary(id="panel"+contador)
            .panel-heading(id="titulo"+contador)
              h2.panel-title #{menu.titulo}
              h3.editar.panel-title 
                a.aEditar.accordion-toggle(titulo="titulo"+contador data-toggle="collapse" data-parent="#accordion" href="#panelCollapse"+contador) Editar 
            .panel-collapse.collapse(id="panelCollapse"+contador)
              form(id="formEditarMenu" method="POST", action="/admin/menu/editar")
                input(type="hidden" name="nombreMenuOriginal" value=menu.titulo)
                .panel-body
                  .tituloMenu
                    input(type="text" name="tituloMenu" value=menu.titulo)
                    .acciones
                      a(href="javascript:document.getElementById('formEditarMenu').submit();") Guardar 
                      span &nbsp; | &nbsp;
                      a(href="/admin/menu/eliminar") Eliminar
                      span &nbsp; | &nbsp;
                      a(href="") Cancelar
                .tituloSubmenu
                  h3 SUBMENU
                table.table(id="tabla"+contador)
                  tr
                    td 
                      h5 
                        b #
                    td 
                      h5
                        b Titulo 
                    td 
                      h5
                        b Url 
                    td 
                      h5
                        b Acción
                  each submenu, index in menu.arregloSubmenu
                    tr.dato(id=index) 
                      td=index+1
                      td 
                        input(type="text" name="submenu["+index+"].titulo" value=submenu.titulo)
                      td 
                        input(type="text" name="submenu["+index+"].url" value=submenu.url) 
                      td  
                        a(href="javascript:void(0);" onclick="cancelarSubmenu("+index+")") Eliminar      
                .agregarSubmenu
                  button.botonSubmenu.btn.btn-primary.btn-sm(type="button" tabla="tabla"+contador) Agregar Submenu

          -contador++

      #botones
        button#agregarMenu.btn.btn-primary(type="button") Agregar Menu 
        span &nbsp; &nbsp; &nbsp;
        button.btn.btn-primary(type="button" onclick="location.href='/admin'") Regresar 

      #menuNuevo(style="display:none")
        form(method="POST", action="/admin/menu/nuevo" name="formMenuNuevo")
        .panel.panel-primary
            .panel-heading
              h2.panel-title MENU NUEVO 
            .panel-collapse
                .panel-body
                  .tituloMenu
                    input(type="text" name="tituloMenu" placeholder="Título")
                    .acciones
                      a#aGuardar(href="javascript: document.formMenuNuevo.submit();") Guardar 
                      span &nbsp; | &nbsp;
                      a(href="") Cancelar
                .tituloSubmenu
                  h3 SUBMENU
                table.table
                  tr
                    td 
                      h5 
                        b #
                    td 
                      h5
                        b Titulo 
                    td 
                      h5
                        b Url 
                    td 
                      h5
                        b Acción
                    tr#0.dato
                      td 1
                      td 
                        input(type="text" name="tituloSubmenu[0]")
                      td 
                        input(type="text" name="urlSubmenu[0]") 
                      td  
                        a(href="javascript:void(0);" onclick="cancelarSubmenu(0)") Eliminar    
                .agregarSubmenu
                  button#botonSubmenu.btn.btn-primary.btn-sm(type="button") Agregar Submenu

  else
    #noAdmin 
      h1 ¡No eres administrador!  