extends ../../../views/layout
block content
  if administrador
    #editarEnlaces
        table#tablaEditarEnlaces
          each pagina in pagsAdmin
            tr
              td.columnaTitulo
                span 
                  a(href="/"+pagina.nombreEnlace target="_blank") #{pagina.titulo}
              td.columnaUsuario
                span nombre usuario 
              td.columnaFecha
                span #{pagina.fechaCreacion} 
              td.columnaAcciones
                a(href="/admin/"+pagina.nombreEnlace) Editar 
                span &nbsp; | &nbsp;
                a(href="/admin/borrar_pagina") Eliminar
                span &nbsp; | &nbsp;
                if pagina.publicar
                  a(href="/admin/no_publicar") Dejar de publicar
                else
                  a(href="/admin/publicar") Publicar
                span &nbsp; 
          tr
            td#paginaNueva(colspan="4")
              button#botonPaginaNueva
                a(href="/admin/new") Pagina Nueva
  else
