extends ../../../views/layout
block content
  if administrador
    #editarEnlaces
        table#tablaEditarEnlaces
          each pagina in pagsAdmin
            tr
              td.columnaTitulo
                span 
                  a(href="/"+pagina.nombreEnlace target="_blank") #{pagina.titulo}
              td.columnaUsuario
                span nombre usuario 
              td.columnaFecha
                span #{pagina.fechaCreacion} 
              td.columnaAcciones
                a(href="/admin/pagina/editar/"+pagina.nombreEnlace) Editar 
                span &nbsp; | &nbsp;
                a(href="/admin/pagina/borrar/"+pagina.nombreEnlace) Eliminar
                span &nbsp; | &nbsp;
                if pagina.publicar
                  a(href="/admin/pagina/cambiarEstado/"+pagina.nombreEnlace) Dejar de publicar
                else
                  a(href="/admin/pagina/cambiarEstado/"+pagina.nombreEnlace) Publicar
                span &nbsp; 
          tr
            td.botones(colspan="2")
              button.btn.btn-primary
                a(href="/admin/pagina/nueva") Pagina Nueva
            td.botones(colspan="2")
              button.btn.btn-primary(type="button")
                a(href="/admin/login") Regresar 
  else
