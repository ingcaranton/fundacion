extends ../../../views/layout
block content
  #editarEnlaces
    table#tablaEditarEnlaces
  if pagina
    #paginaNueva
      form(method="POST", action="/admin/update")
        table#tablaCampos
          tr 
            td.columnaPequena
              p Enlace
            td.columnaGrande
              input(type="text" name="nombreEnlace" value=pagina.nombreEnlace)
          tr
            td.columnaPequena
              p Título
            td.columnaGrande
              input(type="text" name="titulo" value=pagina.titulo)
          tr
            td.columnaPequena
              p Contenido
            td.columnaGrande
              textarea(name="contenido" id="textContenido" class="ckeditor")
                | #{pagina.contenido}
          tr
            td.columnaPequena
              p Descripción
            td.columnaGrande
              textarea(name="descripcion")
                | #{pagina.descripcion}
        table#tablaBotones
          tr
            td#guardar
              button(type="submit") Guardar 
            td#publicar 
              button#botonPublicar Publicar