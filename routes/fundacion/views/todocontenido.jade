extends ../../../views/layout
block content
  #todoContenido    
    each pagina,index in paginas
      - var color
      - var colorLetra
      if pagina.categoria=="fisico"
        - color="#36abd0"
      if pagina.categoria=="emocional"
        - color="#8762ab"
      if pagina.categoria=="espiritual"
        - color="#fef000"
      if pagina.categoria=="sinCategoria"
        - color="#fff"
        - colorLetra="gray"
      else
        - colorLetra="#fff"
      div(onClick="location.href='"+pagina.nombreEnlace+"'" style="background-color:"+color data-toggle="tooltip" data-placement="bottom" title="Ver Mas")
        if pagina.linkImagen
          .izquierda
            img(src=pagina.linkImagen)
        .derecha
          h3(style="color:"+colorLetra) #{pagina.titulo}
          p(style="color:"+colorLetra) #{pagina.descripcion}